nextflow_process {

    name "Test Process growtrees"
    script "main.nf"
    process "GROW_TREES"

    test("Should generate trees") {

        when {
            params {
                today = "01Jan25"
            }
            process {
                """
                input[0] = [ 'B6-16', 
                file("${projectDir}/tests/data/snp_only.fas")]
                input[1] = file("${projectDir}/accessory/infer_MP_nucleotide_200x.mao") 
                input[2] = file("${projectDir}/accessory/analyze_user_tree_MP__nucleotide.mao")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
