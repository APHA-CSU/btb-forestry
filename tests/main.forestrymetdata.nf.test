nextflow_process {

    name "Test Process forestryMetdata"
    script "main.nf"
    process "FORESTRY_META_DATA"

    test("Should generate metadata") {

        when {
            params {
                today = "01Jan25"
            }
            process {
                """
                input[0] = [ true ]
                input[1] = params.today
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
