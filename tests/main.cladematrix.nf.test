nextflow_process {

    name "Test Process cladematrix"
    script "main.nf"
    process "CLADE_MATRIX"

    test("Should generate a clade SNP matrix") {

        when {
            params {
                today = "01Jan25"
            }
            process {
                """
                input[0] = [ 'test', 
                file("${projectDir}/tests/data/snp_only.fas") ]
                input[1] = params.today
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}