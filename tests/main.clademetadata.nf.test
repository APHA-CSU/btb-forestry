nextflow_process {

    name "Test Process cladeMetadata"
    script "main.nf"
    process "CLADE_META_DATA"

    test("Should process clade metadata") {

        when {
            params {
                today = "01Jan25"
            }
            process {
                """
                input[0] = [ 'test', 
                file("${projectDir}/tests/data/samplelist.csv"), 
                file("${projectDir}/tests/data/filterMeta_exp.csv")]
                input[1] = params.today
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
