nextflow_process {

    name "Test Process cleandata"
    script "main.nf"
    process "cleandata"

    test("Should clean up input files") {

        when {
            params {
                today = "01Jan25"
            }
            process {
                """
                input[0] = file("${projectDir}/tests/data/subtest.csv")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
