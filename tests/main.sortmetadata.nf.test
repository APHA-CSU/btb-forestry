nextflow_process {

    name "Test Process sortmetadata"
    script "main.nf"
    process "SORT_META_DATA"

    test("Should sort metadata") {

        when {
            params {
                today = "01Jan25"
            }
            process {
                """
                input[0] = file("${projectDir}/tests/data/metaTest.csv")
                input[1] = file("${projectDir}/tests/data/moveTest.csv")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
