nextflow_process {

    name "Test Process locations"
    script "main.nf"
    process "locations"

    test("Should format location data") {

        when {
            params {
                today = "01Jan25"
            }
            process {
                """
                input[0] = file("${projectDir}/tests/data/location.csv")
                input[1] = file("${projectDir}/tests/data/counties.tsv")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
